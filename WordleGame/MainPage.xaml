<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordleGame.MainPage"
             xmlns:local="clr-namespace:WordleGame"
             Appearing="ContentPage_Appearing"
             
             >

    <ScrollView x:Name="scrollView" HorizontalOptions="Center">
        <VerticalStackLayout
            Padding="30"
            Spacing="55"
            HorizontalOptions="Center"
            VerticalOptions="Center" x:Name="vertStack">
            <Label Text="FAITH'S WORDLE!" HorizontalOptions="Center" FontSize="{Binding FontSize}" x:Name="title"></Label>

            <Button x:Name="playButton" Text="PLAY GAME" WidthRequest="300" Clicked="PlayButton_Clicked" ></Button>
            <Button x:Name="ruleButton" Text="RULES" WidthRequest="300" FontSize="{Binding FontSize}" Clicked="ruleButton_Clicked"></Button>
            <Button x:Name="settings" Text="SETTINGS" WidthRequest="300" FontSize="{Binding FontSize}" Clicked="settings_Clicked"></Button>
            <Button x:Name="statsButton" Text="STATISTICS" WidthRequest="300" FontSize="{Binding FontSize}" Clicked="statsButton_Clicked"></Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
