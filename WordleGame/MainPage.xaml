<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordleGame.MainPage"
             xmlns:local="clr-namespace:WordleGame"
             >

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="55"
            HorizontalOptions="Center"
            VerticalOptions="Center">

            <Button x:Name="playButton" Text="Play Game" WidthRequest="300" FontSize="30" Clicked="PlayButton_Clicked"></Button>
            <Button x:Name="ruleButton" Text="Rules" WidthRequest="300" FontSize="30" Clicked="ruleButton_Clicked"></Button>
            <Button x:Name="settings" Text="Settings" WidthRequest="300" FontSize="30" Clicked="settings_Clicked"></Button>
            <Button x:Name="statsButton" Text="Statistics" WidthRequest="300" FontSize="30" Clicked="statsButton_Clicked"></Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
